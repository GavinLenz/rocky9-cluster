# roles/common/templates/local.repo.j2
[baseos]
name=Rocky BaseOS
baseurl=http://{{ controller_ip | default(server_ip) }}/os/BaseOS
enabled=1
gpgcheck=0

[appstream]
name=Rocky AppStream
baseurl=http://{{ controller_ip | default(server_ip) }}/os/AppStream
enabled=1
gpgcheck=0

[slurm-local]
name=Slurm Offline Repo
baseurl=http://{{ controller_ip | default(server_ip) }}/slurm
enabled=1
gpgcheck={{ slurm_repo_gpgcheck | default(0) }}
{% if slurm_repo_gpgcheck | default(0) | bool -%}
gpgkey=http://{{ controller_ip | default(server_ip) }}/slurm/GPG-KEY-SLURM
{% endif -%}
