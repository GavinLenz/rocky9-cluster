            "tftp-server",
            "httpd",
            "ipxe-bootimgs",
            "rsync",
            "python3-libselinux",
            "policycoreutils-python-utils"
          ],
          "efi": []
        },
        "ipxe": {
          "default_target": "local",
          "timeout_ms": 5000,
          "menu": [
            {
              "key": "i",
              "label": "Fresh install",
              "target": "fresh"
            },
            {
              "key": "l",
              "label": "Boot from NVMe",
              "target": "local"
            }
          ]
        },
        "role_packages": {
          "controller": [
            "@^minimal-environment"
          ],
          "compute": [
            "@^minimal-environment"
          ]
        }
      },
      "images": {
        "rocky9_minimal": {
          "name": "Rocky-9.6-x86_64-minimal.iso",
